<div class="large-9 columns">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @post.title %>
  </h1>

  <%= markdown @post.body %>

  <% if signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post), class: "secondary button small" %> |
  <% end %>
  <%= link_to 'Back', root_path, class: "secondary button small" %>

  <%= render 'disqus' %>

</div>
<div class="large-3 columns right">
  <%= render 'layouts/about' %>
  <%= render 'layouts/recent' %>
</div>